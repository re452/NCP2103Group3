@page "/dashboard"
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveServer
@using PawGress.Models
@using PawGress.Services
@inject PetService PetService
@inject UserService UserService
@inject NavigationManager Navigation

<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet" />

<NavMenu />

<div class="page-background">
    <div class="dashboard-container">
        <!-- Section 1: Greeting and popular pet -->
        <section class="section1">
            <h1>Hello, Pawthlete!</h1>
            <p>Welcome to your dashboard — where every step, stretch, and goal brings out your best self.</p>

            <div class="popular-pet-card">
                <img src="/Images/Fluffy.png" alt="Popular Pet" class="pet-image" />
                <div class="pet-info">
                    <h2>DIVA</h2>
                    <p class="pet-description">
                        She struts like she owns the place — and honestly, she does. Diva demands attention, gives side-eyes like a pro, and only cuddles when she feels like it. Beneath that sass is a loyal heart that always comes back for treats.
                    </p>
                    <div class="pet-stats">
                        <div class="stat-bar">
                            <label>❤️</label>
                            <div class="bar"><div class="fill" style="width:80%"></div></div>
                        </div>
                        <div class="stat-bar">
                            <label>⚡</label>
                            <div class="bar"><div class="fill" style="width:60%"></div></div>
                        </div>
                    </div>
                    <button class="your-pets-btn" @onclick="@(() => Navigation.NavigateTo("/yourpets"))">Your Pets</button>
                </div>
            </div>
        </section>

        <!-- Section 2: Graphs & inspirational quote -->
        <section class="section2">
            <h3>Pawprints Over Time</h3>
            <div class="graphs">
                <img src="/Images/line-chart-placeholder.png" alt="Line graph" class="line-graph" />
                <img src="/Images/pie-chart-placeholder.png" alt="Pie chart" class="pie-chart" />
            </div>
            <p class="inspiration">YOUR JOURNEY DOESN’T END HERE — MORE PAWGRESS AWAITS!</p>
        </section>
    </div>
</div>

<style>

.page-background {
    min-height: 100vh;
    width: 100%;
    background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('/Images/Background.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 20px;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    font-family: 'Press Start 2P', cursive;
    color: #fff;
}

/* --- Dashboard Container --- */
.dashboard-container {
    padding: 20px;
    max-width: 1000px;
    width: 100%;
    box-sizing: border-box;
    background-color: #1b102d; /* match NavMenu/Tasks */
    border-radius: 12px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.5);
}

/* Section 1 */
.section1 h1 {
    font-size: 2rem;
    margin-bottom: 10px;
}

.section1 p {
    font-size: 1rem;
    margin-bottom: 20px;
}

.popular-pet-card {
    display: flex;
    gap: 20px;
    background-color: rgba(255, 255, 255, 0.05);
    padding: 20px;
    border-radius: 15px;
    align-items: center;
}

.pet-image {
    width: 120px;
    height: 120px;
    border-radius: 10px;
    object-fit: cover;
}

.pet-info h2 {
    font-size: 2rem;
    margin: 0;
}

.pet-description {
    font-size: 0.9rem;
    margin: 10px 0;
}

.pet-stats {
    display: flex;
    gap: 10px;
    margin-bottom: 10px;
}

.stat-bar {
    display: flex;
    align-items: center;
    gap: 5px;
}

.bar {
    width: 100px;
    height: 10px;
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 5px;
    overflow: hidden;
}

.fill {
    height: 100%;
    background-color: #3ee6c8;
}

/* Your Pets button */
.your-pets-btn {
    background-color: #3ee6c8;
    color: #000;
    border: none;
    padding: 8px 12px;
    border-radius: 5px;
    cursor: pointer;
    font-family: 'Press Start 2P', cursive;
}

/* Section 2 */
.section2 {
    margin-top: 40px;
}

.graphs {
    display: flex;
    gap: 20px;
}

.line-graph, .pie-chart {
    width: 300px;
    height: 200px;
}

.inspiration {
    text-align: center;
    margin-top: 20px;
    font-weight: bold;
    font-family: 'Press Start 2P', cursive;
}
</style>

@code {
    private Pet? mostPopularPet;
    private int mostPopularPetLevel = 1;
    private int mostPopularPetXP = 0;
    private int mostPopularPetXPPercent = 0;

    private string CurrentUsername = "Pawthlete";
    private int UserCurrency = 0;

    protected override async Task OnInitializedAsync()
    {
        var allPets = await PetService.GetAllPetsAsync();
        if (allPets.Any())
        {
            mostPopularPet = allPets.First();
            mostPopularPetLevel = 3;
            mostPopularPetXP = 120;
            mostPopularPetXPPercent = (int)((double)mostPopularPetXP / XPForNextLevel(mostPopularPetLevel) * 100);
        }
    }

    private void GoToYourPets()
    {
        Navigation.NavigateTo("/yourpets");
    }

    private int XPForNextLevel(int level)
    {
        return level * 100;
    }
}
