@page "/store"

<!-- Embed the static Store page from wwwroot/store_page -->
<div style="width:100%; height:100vh; box-sizing:border-box; overflow:hidden;">
    <iframe src="/store_page/index.html"
            title="PawGress Store"
            style="border:0; width:100%; height:100%;"
            sandbox="allow-scripts allow-same-origin allow-forms">
        Your browser does not support iframes. Open the store page at
        <a href="/store_page/index.html">/store_page/index.html</a>.
    </iframe>
</div>
