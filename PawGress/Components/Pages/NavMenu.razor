@using PawGress.Services
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveServer
@inject NavigationManager Navigation

<nav class="navbar">
    <div class="navbar-brand" @onclick="@(() => Navigation.NavigateTo("/dashboard"))">
        <img src="/Images/logo.png" alt="PawGress Logo" class="logo" />
        <span>PawGress</span>
    </div>

    <ul class="nav-links">
        <li class="@GetActiveClass("/dashboard")" @onclick="@(() => Navigation.NavigateTo("/dashboard", forceLoad: true))">Dashboard</li>
        <li class="@GetActiveClass("/tasks")" @onclick="@(() => Navigation.NavigateTo("/tasks", forceLoad: true))">Tasks</li>
        <li class="@GetActiveClass("/challenges")" @onclick="@(() => Navigation.NavigateTo("/challenges", forceLoad: true))">Challenges</li>
        <li class="@GetActiveClass("/store")" @onclick="@(() => Navigation.NavigateTo("/store", forceLoad: true))">Store</li>
    </ul>

    <div class="navbar-user">
        <span class="username">@CurrentUsername</span>
        <span class="currency">ðŸ’Ž @UserCurrency</span>
        <button class="logout-btn" @onclick="Logout">Logout</button>
    </div>
</nav>

<style>
/* Remove default margin/padding and ensure full height */
html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
}
/* Navbar container using mostly #36274F */
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #36274F; /* main background color */
    color: #fff;
    padding: 10px 20px;
    font-family: 'Segoe UI', sans-serif;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
}

/* Brand logo + text */
.navbar-brand {
    display: flex;
    align-items: center;
    cursor: pointer;
    gap: 10px;
}

.navbar-brand .logo {
    width: 40px;
    height: 40px;
}

/* Navigation links */
.nav-links {
    display: flex;
    gap: 20px;
    list-style: none;
    margin: 0;
    padding: 0;
}

.nav-links li {
    cursor: pointer;
    padding: 6px 12px;
    border-radius: 6px;
    transition: background-color 0.2s, color 0.2s;
}

.nav-links li:hover {
    background-color: rgba(255, 255, 255, 0.1); /* subtle hover */
}

.nav-links li.active {
    background-color: #3ee6c8; /* teal for active page */
    color: #000;
    font-weight: bold;
}

/* User info section */
.navbar-user {
    display: flex;
    align-items: center;
    gap: 15px;
}

.navbar-user .username {
    font-weight: bold;
}

.navbar-user .currency {
    background-color: rgba(255, 255, 255, 0.2);
    padding: 4px 8px;
    border-radius: 5px;
}

/* Logout button */
.logout-btn {
    background-color: #ff4c4c;
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    color: #fff;
    font-weight: bold;
    transition: background-color 0.2s;
}

.logout-btn:hover {
    background-color: #e03b3b;
}
</style>

@code {
    private string CurrentUsername = "Pawthlete";
    private int UserCurrency = 1200;

    private string GetActiveClass(string href)
    {
        return Navigation.Uri.EndsWith(href) ? "active" : "";
    }

    private void Logout()
    {
        Navigation.NavigateTo("/login");
    }
}
