@using PawGress.Services
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveServer
@inject NavigationManager Navigation

<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">

<nav class="navbar">
    <div class="navbar-brand" @onclick="@(() => Navigation.NavigateTo("/dashboard"))">
        <img src="/Images/logo.png" alt="PawGress Logo" class="logo" />
        <span>PawGress</span>
    </div>

    <ul class="nav-links">
        <li class="@GetActiveClass("/dashboard")" @onclick="@(() => Navigation.NavigateTo("/dashboard", forceLoad: true))">Dashboard</li>
        <li class="@GetActiveClass("/tasks")" @onclick="@(() => Navigation.NavigateTo("/tasks", forceLoad: true))">Tasks</li>
        <li class="@GetActiveClass("/challenges")" @onclick="@(() => Navigation.NavigateTo("/challenges", forceLoad: true))">Challenges</li>
       
    </ul>

    <div class="navbar-user">
        <span class="username">@CurrentUsername</span>
        <span class="currency">@UserCurrency</span>
        <button class="logout-btn" @onclick="Logout">Logout</button>
    </div>
</nav>

<style>
/* Remove default margin/padding */
html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    border: 0;
    box-sizing: border-box;
    background: #1b102d; /* Make background same as navbar to remove page border */
}

/* Pixel font for all nav elements */
.navbar, .nav-links li, .navbar-user, .logout-btn, .navbar-brand span {
    font-family: 'Press Start 2P', cursive !important;
}

/* Navbar container */
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #1b102d;
    color: #fff;
    padding: 10px 20px;
    box-shadow: 0 4px 0 #36274f;
    border: 0; /* remove white border */
}

/* Brand logo + text */
.navbar-brand {
    display: flex;
    align-items: center;
    cursor: pointer;
    gap: 10px;
}

.navbar-brand .logo {
    width: 40px;
    height: 40px;
}

/* Navigation links */
.nav-links {
    display: flex;
    gap: 20px;
    list-style: none;
    margin: 0;
    padding: 0;
}

.nav-links li {
    cursor: pointer;
    padding: 6px 12px;
    border: 2px solid #36274f;
    background-color: #36274f;
    transition: background-color 0.2s;
    box-shadow: 2px 2px 0 #000 inset;
    position: relative;
    top: -1px; /* move upward */
}

.nav-links li:hover {
    background-color: #3ee6c8;
    color: #1b102d;
}

.nav-links li.active {
    background-color: #3ee6c8;
    color: #1b102d;
}

/* User info */
.navbar-user {
    display: flex;
    align-items: center;
    gap: 15px;
    position: relative;
    top: -1px; /* move upward */
}

.navbar-user .username {
    font-weight: bold;
}

.navbar-user .currency {
    background-color: #36274f;
    padding: 4px 8px;
    border: 2px solid #000;
    border-radius: 2px;
    box-shadow: 2px 2px 0 #000 inset;
    position: relative;
}

/* Logout button pixel style */
.logout-btn {
    background-color: #ff4c4c;
    border: 2px solid #000;
    padding: 6px 12px;
    border-radius: 2px;
    cursor: pointer;
    color: #fff;
    font-weight: bold;
    box-shadow: 2px 2px 0 #000 inset;
}

.logout-btn:hover {
    background-color: #e03b3b;
}
</style>

@code {
    private string CurrentUsername = "Pawthlete";
    private int UserCurrency = 0;

    private string GetActiveClass(string href) => Navigation.Uri.EndsWith(href) ? "active" : "";
    private void Logout() => Navigation.NavigateTo("/", forceLoad: true);
}
