        font-size: 0.7rem;
        margin: 5px 0;
    }

    .muscle-group .label {
        color: #3ee6c8;
    }
</style>

@code {
    private List<Challenge> AllChallenges = new();
    private IEnumerable<Challenge> FilteredChallenges = new List<Challenge>();
    private string CurrentFilter = "ALL";
    private string CurrentUser = "Pawthlete";
    private int SelectedChallengeCount => AllChallenges.Count(c => c.IsSelected);

    protected override async Task OnInitializedAsync()
    {
        AllChallenges = await ChallengeService.GetAllChallengesAsync();
        FilteredChallenges = AllChallenges;
    }

    private void FilterByCategory(string filter)
    {
        CurrentFilter = filter;
        
        if (filter == "ALL")
        {
            FilteredChallenges = AllChallenges;
        }
        else if (new[] { "UPPER BODY", "LOWER BODY", "CARDIO" }.Contains(filter))
        {
            // Filter by primary CATEGORY
            FilteredChallenges = AllChallenges.Where(c => c.Category == filter).ToList();
        }
        else 
        {
            // Filter by sub-muscle group (MainMuscle or SecondaryMuscles)
            FilteredChallenges = AllChallenges.Where(c => 
                c.MainMuscle.Contains(filter) || 
                c.SecondaryMuscles.Contains(filter)
            ).ToList();
        }
    }

    private string GetFilterClass(string filter) => CurrentFilter == filter ? "active-filter" : "";

    private async Task HandleChallengeSelection(Challenge challenge)
    {
        StateHasChanged();
        await Task.CompletedTask;
    }
    
    private Task HandleChallengeDifficultyChange(Challenge challenge)
    {
        StateHasChanged();
        return Task.CompletedTask;
    }

    private async Task AddSelectedChallenges()
    {
        var selected = AllChallenges.Where(c => c.IsSelected).ToList();

        foreach (var challenge in selected)
        {
            await ChallengeService.AddChallengeToTasksAsync(challenge.Id, CurrentUser);
            challenge.IsSelected = false; 
        }

        Navigation.NavigateTo("/tasks", forceLoad: true);
        StateHasChanged();
    }
}