@page "/team"
@using System.Collections.Generic

<h1 class="page-title">Our Team</h1>

<p class="lead">Meet the people who built this project.</p>

<div class="team-grid">
    @foreach (var m in Members)
    {
        <article class="team-card" aria-labelledby="@($"name-{m.Id}")">
            <img class="team-photo" src="@m.PhotoUrl" alt="@($"{m.FullName} ({m.PreferredName})")" />
            <h2 id="@($"name-{m.Id}")" class="team-name">@m.FullName</h2>
            <p class="nickname">(@m.PreferredName)</p>
            <h3 class="role-title">Contributions</h3>
            <p class="contribution">@m.Contribution</p>
        </article>
    }
</div>

