@page "/studentcs/delete"
@using Microsoft.EntityFrameworkCore
@using CRUDph9.Models
@inject IDbContextFactory<CRUDph9.Data.CRUDph9Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Studentcs</h2>
    <hr />
    @if (studentcs is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@studentcs.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Age</dt>
            <dd class="col-sm-10">@studentcs.Age</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Birthday</dt>
            <dd class="col-sm-10">@studentcs.Birthday</dd>
        </dl>
        <EditForm method="post" Model="studentcs" OnValidSubmit="DeleteStudentcs" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(studentcs is null)">Delete</button> |
            <a href="/studentcs">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Studentcs? studentcs;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        studentcs = await context.Studentcs.FirstOrDefaultAsync(m => m.Id == Id);

        if (studentcs is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteStudentcs()
    {
        using var context = DbFactory.CreateDbContext();
        context.Studentcs.Remove(studentcs!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/studentcs");
    }
}
